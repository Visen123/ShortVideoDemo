<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tencent.liteav.demo.videoediter"
    android:versionCode="1"
    android:versionName="1.0">

    <application>
        <activity
            android:name=".TCVideoEditChooseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TCVideoPreprocessActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.tencent.liteav.demo.videopreprocess" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TCVideoEditerActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.tencent.liteav.demo.videoediter" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".paster.TCPasterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bubble.TCWordEditActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity
            android:name=".common.videopreview.TCVideoPreviewActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>